<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Memory_plus" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="SplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purple_200</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/baseline_location_on_24</item>
        <item name="windowSplashScreenAnimationDuration">800</item>
        <item name="postSplashScreenTheme">@style/Theme.Memory_plus</item>
    </style>

</resources>